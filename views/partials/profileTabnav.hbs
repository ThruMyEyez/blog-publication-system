{{#if isOwnProfile}}
  <ul class="profile-tabs">
    <li class="tab {{actProfileTab}}">
      <a href="/profile/{{_id}}" class="nav-link">{{username}}'s Profile</a>
    </li>
    <li class="tab {{actReadHisTab}}">
      <a href="/profile/my-history" class="nav-link">Last read Articles</a>
    </li>
    <li class="tab {{actCommentHisTab}}">
      <a href="/profile/my-comments" class="nav-link">Comment history</a>
    </li>
    <li class="tab {{actFollowTab}}">
      <a href="/profile/follow-list" class="nav-link">Follow list</a>
    </li>
    <li class="tab {{actEditProfileTab}}">
      <a href="/profile/edit" class="nav-link">Edit Profile</a>
    </li>
  </ul>
{{else}}
  <ul class="profile-tabs">
    <li class="tab {{actProfileTab}}">
      <a href="/profile/{{_id}}" class="nav-link">{{username}}'s Profile</a>
    </li>
    <li class="tab">
      <a href="/authentication/sign-in" class="nav-link">Log in</a>
    </li>
  </ul>
{{/if}}