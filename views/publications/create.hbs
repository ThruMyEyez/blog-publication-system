<div class="container pt-5">
  <h3>Write a new Article:</h3>
  <form action="/articles/create" method="POST" enctype="multipart/form-data">
    <div class="form-floating mb-3">
      <input
        type="text"
        id="input-title"
        name="title"
        placeholder="labelIsPlaceholder"
        class="form-control"
      />
      <label for="input-title">Title for article</label>
    </div>

    <div class="form-floating">
      <select
        class="form-select"
        id="categories"
        name="categories"
        aria-label="categories"
        required
      >
        {{#each categories}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}

      </select>
      <label for="categories">Article Category/Topic</label>
    </div>
    <div class="mb-3">
      <label for="thumbnail-select-file" class="form-label mt-3">Upload your
        Article Thumbnail</label>
      <input
        class="form-control"
        type="file"
        id="thumbnail-select-file"
        name="thumbnailUrl"
      />
    </div>
    <button class="btn btn-primary text-indigo-100 mt-4">Create Article and
      start adding content</button>
  </form>
</div>